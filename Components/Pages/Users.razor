    .mud-table-cell{
        padding: 0.05rem 0.25rem 0.05rem 1rem !important;
    }
    .mud-input.mud-input-underline::before{
        border-bottom: none !important;
    }
    .mud-input.mud-input-underline::after{
        padding: 0 !important;
    }

    .score{
        width: 10% !important;
    }
